---
import { MenuItems } from "astro-navbar";

const socialLinks = [
  {
    icon: "fa-brands fa-facebook",
    title: "Facebook",
    path: "//facebook.bsccsitnepal.com",
  },
  {
    icon: "fa-brands fa-instagram",
    title: "Instagram",
    path: "//instagram.bsccsitnepal.com",
  },
];
---

<div
  class="bg-black p-8 md:px-20 md:py-20 mt-20 mx-auto max-w-5xl rounded-lg flex flex-col items-center text-center">
  <h2 class="text-white text-3xl md:text-4xl tracking-tight">We are on social media</h2>
  <MenuItems class="w-full lg:w-auto mt-5">
    <ul class="flex flex-row justify-center align-middle gap-4">
      {
        socialLinks.map((item) => (
          <>
            {item && (
              <li>
                <a
                  href={item.path}
                  class="flex text-white text-2xl md:text-3xl gap-4 hover:text-gray-200 text-center">
                  <i class={item.icon} />
                </a>
              </li>
            )}
          </>
        ))
      }
    </ul>
  </MenuItems>
</div>
